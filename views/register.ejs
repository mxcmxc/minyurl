<!-- views/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
  <%- include('partials/_header') %>
</head>
<body>

  <h1>Registration</h1>

  <form id="registration" action="/register" method="POST">
    <p>
    <label for="email">Email:</label>
    <input id="email" type="email" name="email" placeholder="user@example.com" style="width: 150px" >
    </p>
    <p>
    <label for="password">Password:</label>
    <input id="password" type="password" name="password" placeholder="password" style="width: 150px" >
    <input type="submit" value="Register">
    </p>
  </form>

</body>
</html>

